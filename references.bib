	Issn = {17592887},
	Keywords = {caterpillar plot,credibility interval,credible interval,evidence synthesis,graphical tool,meta-regression,summary forest plot},
	Month = {jan},
	Number = {1},
	Pages = {4--12},
	Pmid = {32445243},
	Publisher = {John Wiley and Sons Ltd},
