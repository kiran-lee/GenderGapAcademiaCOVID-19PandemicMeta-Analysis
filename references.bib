	Doi = {10.1111/1365-2435.12587},
	File = {:Users/kiranlee/Library/Application Support/Mendeley Desktop/Downloaded/Fox et al. - 2016 - Gender differences in patterns of authorship do not affect peer review outcomes at an ecology journal.pdf:pdf},
